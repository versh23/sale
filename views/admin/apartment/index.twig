{% extends 'admin/layout.twig' %}
{% block title %} Админка | Квартиры {% endblock %}
{% block content %}
    <div class="col-sm-8 col-md-8">
        <p><a class="btn pull-right btn-success" href="{{ path('adminApartment.Add') }}">Добавить</a></p>

        <div class="clearfix"></div>
        <p></p>
        <ul class="list-group">
            {% for apartment in apartments %}
                <li class="list-group-item">
                    {{ apartment.hname }}, {{ apartment.adr }} - {{ apartment.cnt_room }} комнат(ы)
                    <div class="pull-right btn-group">
                        <a href="{{ path('adminApartment.Edit', {id: apartment.id}) }}" type="button"
                           class="btn btn-warning">Изменить</a>
                        <a onclick="return confirm('Удалить точно?');" href="{{ path('adminApartment.Remove', {id: apartment.id}) }}" type="button"
                           class="btn btn-danger">Удалить</a>
                    </div>
                    <div class="clearfix"></div>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}   