{% extends 'admin/layout.twig' %}

{% block content %}
    {% set url = (snippet.id) ? path('adminSnippet.Save', {id: snippet.id}) : path('adminSnippet.Create') %}
    {% set text = (snippet.id) ? 'Сохранить' : 'Добавить' %}
    <div class="col-sm-8 col-md-8">
        <form action="{{ url }}" method="post">
            <div class="form-group">
                <label class="control-label">Название признака</label>

                <div class="controls">
                    <input type="text" class="form-control" name="snippet[label]" value="{{ snippet.label }}">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label">Тип признака</label>

                <div class="controls">
                    <select class="form-control" name="snippet[type]">
                        <option {% if snippet.type == 1 %} selected {% endif %} value="1">Одиночный</option>
                        <option {% if snippet.type == 2 %} selected {% endif %} value="2">Множ выбор</option>
                        <option {% if snippet.type == 3 %} selected {% endif %} value="3">Выбор из списка</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label">Значения признака</label>

                <div class="controls">
                    <input type="text" class="form-control" name="snippet[value]" value="{{ snippet.value|join(', ') }}">
                </div>
            </div>

            <button class="btn pull-right btn-success">{{ text }}</button>
        </form>
    </div>
{% endblock %}  